        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Attraction.AttrName" class="control-label"></label>
                <input asp-for="Attraction.AttrName" class="form-control" />
                <span asp-validation-for="Attraction.AttrName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attraction.City" class="control-label"></label>
                <input asp-for="Attraction.City" class="form-control" />
                <span asp-validation-for="Attraction.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attraction.Category" class="control-label"></label>
                <input asp-for="Attraction.Category" class="form-control" />
                <span asp-validation-for="Attraction.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attraction.Price" class="control-label"></label>
                <input asp-for="Attraction.Price" class="form-control" />
                <span asp-validation-for="Attraction.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attraction.Longitude" class="control-label"></label>
                <input asp-for="Attraction.Longitude" class="form-control" />
                <span asp-validation-for="Attraction.Longitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attraction.Latitude" class="control-label"></label>
                <input asp-for="Attraction.Latitude" class="form-control" />
                <span asp-validation-for="Attraction.Latitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attraction.RecommendedAge" class="control-label"></label>
