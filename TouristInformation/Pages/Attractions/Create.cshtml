            </div>
            <div class="form-group">
                <label asp-for="Attraction.Duration" class="control-label"></label>
                <input asp-for="Attraction.Duration" class="form-control" />
                <span asp-validation-for="Attraction.Duration" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

