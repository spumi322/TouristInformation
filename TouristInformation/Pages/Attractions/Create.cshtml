@model TouristInformation.Pages.Attractions.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Add Attraction</h1>

<h4>Attraction</h4>
