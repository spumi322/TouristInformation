@page
@model TouristInformation.Pages.Attractions.indexModel

@{
    ViewData["Title"] = "List of Attractions";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>List of Attractions</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Attractions[0].AttrName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attractions[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attractions[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attractions[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attractions[0].Duration)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Attractions) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AttrName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
